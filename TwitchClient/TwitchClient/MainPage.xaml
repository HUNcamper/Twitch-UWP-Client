<Page
    x:Class="TwitchClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TwitchClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="bLogin" Content="Login" HorizontalAlignment="Center" Margin="0,0,0,50" VerticalAlignment="Center" Click="bLogin_Click"/>
        <Button x:Name="bStream" Content="Stream" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Center" Click="bStream_Click"/>

        <Frame x:Name="loginFrame" Visibility="Collapsed" Background="#ccc" VerticalAlignment="Top" HorizontalAlignment="Center">
            <WebView x:Name="loginWebview" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalAlignment="Top" HorizontalAlignment="Center"  NavigationCompleted="loginWebview_NavigationCompleted" Margin="5" NavigationStarting="loginWebview_NavigationStarting"/>
        </Frame>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,150,0,0" Text="Welcome!" TextWrapping="Wrap" VerticalAlignment="Center"/>
        <Image x:Name="imageUser" HorizontalAlignment="Center" Height="100" Margin="0,300,0,0" VerticalAlignment="Center" Width="100"/>
    </Grid>
</Page>
